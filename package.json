  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "postbuild": "npm run copy-assets",
    "copy-assets": "npm run copy-public && npm run copy-views && npm run copy-env",
    "copy-public": "copyfiles -u 1 src/public/**/* dist/public",
    "copy-views": "copyfiles -u 1 src/views/**/* dist/views",
    "copy-env": "copyfiles .env dist",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts"
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
